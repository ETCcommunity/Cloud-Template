FROM ubuntu:trusty

ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update && \
apt-get install -y git && \
git clone https://github.com/ethereumproject/go-ethereum.git && \
apt-get install -y build-essential libmp3-dev golang software-properties-common &&\
cd go-ethereum && \
make geth

EXPOSE 8545
EXPOSE 30303
